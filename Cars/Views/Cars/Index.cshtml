@model IEnumerable<Cars.Models.Car.CarsViewModel>
@{
    int rowNumber = 1;
}
<div class="btn-for-create-space-ship-page-table">
    <a asp-action="Create" asp-controller="Cars" style="background-color:#999966; margin-bottom: 10px;" class="btn btn-primary">Create New Car</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th scope="col">Nr</th>
                <th scope="col">Car Make</th>
                <th scope="col">Year</th>
                <th scope="col">Car Color</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr class="table-dark">
                    <td>@rowNumber</td>
                    <td>@car.CarMake</td>
                    <td>@car.Year</td>
                    <td>@car.CarColor</td>
                    <td>
                        <a asp-action="Details" asp-controller="Cars" asp-route-id="@car.Id" style="background-color:#e9d362; color:brown;" class="btn btn-info">Details</a>
                        <a asp-action="Update" asp-controller="Cars" asp-route-id="@car.Id" style="background-color:#e9d362; border: solid 1px;" class="btn btn-info">Update</a>
                        <a asp-action="DeletePrimaryData" asp-controller="Cars" asp-route-id="@car.Id" style="background-color:transparent; border: solid 1px;" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
}
else
{
    <p>No cars found.</p>
}


